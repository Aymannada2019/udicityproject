@model PrimeMarket.Models.UIViewModel.CartViewModel
@{
    ViewBag.Title = "الدفع";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            @*<div class="col-lg-12">
                    <h6>
                        <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                    </h6>
                </div>*@
        </div>
        <div class="checkout__form">
            <h4>تفاصيل التسليم</h4>
            <form id="PlaceOrderForm" name="PlaceOrderForm" method="post" action="/shoppingcart/placeorder">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__input">
                            <p>التسليم في العنوان<span>*</span></p>
                            <input type="text" name="txt_ShippingAddress" placeholder="عنوان تسليم الطلب" class="checkout__input__add" required>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>الهاتف / الجوال<span>*</span></p>
                                    <input type="text" name="txt_phone" required>
                                </div>
                            </div>
                            <div class="col-lg-6">

                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>ملحوظات التسليم</p>
                            <input type="text" name="txt_ShippingNotes" placeholder="ملحوظات التسليم" class="checkout__input__add">
                        </div>
                        <div class="checkout__input">
                            <p>ملحوظات الطلب</p>
                            <input type="text" name="txt_Notes" placeholder="ملحوظات الطلب" class="checkout__input__add">
                        </div>
                        
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>تفاصيل طلبك</h4>
                            <div class="checkout__order__products">السلعة <span>المجموع</span></div>
                            <ul>
                                @{double CartTotal = 0.0;}
                                @foreach (var item in Model.cartItems)
                                {
                                    double ItemTotal = (double)item.Commodity.Price * (double)item.Quantity;
                                    CartTotal += ItemTotal;
                                    <li>@item.Commodity.Title <span>@ItemTotal ج.م</span></li>
                                }
                            </ul>
                            <div class="checkout__order__subtotal">الإجمالي <span>@CartTotal ج.م</span></div>
                            <div class="checkout__order__total">المجموع  <span>@CartTotal ج.م</span></div>
                            <p>
                                يمكنك الدفع باستخدام كروت فيزا أو ماستر كارد أو باي بال أو يمكنك الدفع عند الإستلام.
                            </p>
                            
                                <div class="checkout__input__checkbox">
                                    <label for="ondelivery">
                                        الدفع عند الاستلام
                                        <input type="radio" name="Radio_PaymentMethod" id="ondelivery">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="checkout__input__checkbox">
                                    <label for="payment">
                                        الدفع ببطاقة الإئتمان: ماستر كارد / فيزا
                                        <input type="radio" name="Radio_PaymentMethod" id="payment">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="checkout__input__checkbox">
                                    <label for="paypal">
                                        الدفع باستخدام باي بال
                                        <input type="radio" name="Radio_PaymentMethod" id="paypal">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <button type="submit" class="site-btn">
                                    تنفيذ الطلب
                                </button>
                            
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->
