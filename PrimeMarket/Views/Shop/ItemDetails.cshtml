                                </p>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <div class="product__details__tab__desc">
                                @foreach (var review in Model.ThisCommodityReviews)
                                {
                                <p>بواسطة <strong>@review.AspNetUser.FullName</strong> بتاريخ <i>@string.Format("{0:dd/MM/yyyy hh:mm tt}",review.CreationDate)</i></p>
                                <p>
                                    @review.Comment
                                </p>
                                <hr />
                                }
                            </div>
                            <h4 style="text-decoration:underline;">أضف تقييمك:</h4>

                                                            <form name="AddCommentForm" method="post" action="/Shop/AddComment">
                                                                <input type="hidden" id="hdn_CommodityId" name="hdn_CommodityId" value="@Model.ThisCommodity.CommodityId" />
                                                                <div class="form-group">
                                                                    <label class="control-label">تعليقك:</label>
                                                                    <div class="col-md-10">
                                                                        <input id="txt_comment" name="txt_comment" type="text" class="form-control" />
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <div class="col-md-offset-2 col-md-10">
                                                                        <input type="submit" value="Save" class="btn primary-btn" />
                                                                    </div>
                                                                </div>
                                                            </form> 


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>منتجات ذات صلة</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var relatedItem in Model.RelatedItems)
            {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="@relatedItem.CommodityImages.FirstOrDefault().ImagePath">
                        
                        <form id="AddToCartForm" name="AddToCartForm" method="post" action="/Shop/AddToCart">
                            <input type="hidden" id="hdn_CommodityId" name="hdn_CommodityId" value="@relatedItem.CommodityId" />
                            <input type="hidden" id="txt_Quantity" name="txt_Quantity" value="1" />

                            <ul class="product__item__pic__hover">
                                <li><a class="addtocart"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </form>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="~/shop/itemdetails?CommodityId=@relatedItem.CommodityId">@relatedItem.Title</a></h6>
                        <h5>@relatedItem.Price ج.م/@relatedItem.PriceUnit.PriceUnit1</h5>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>
<!-- Related Product Section End -->

@section Scripts{
<script src="/Content/SiteScripts/Cart.js"></script>
    <script>
        $(document).ready(function () {
            $(".addtocart").click(function () {
                var addbtn = $(this);
                addbtn.closest("form").submit();
            });
        });
    </script>
}