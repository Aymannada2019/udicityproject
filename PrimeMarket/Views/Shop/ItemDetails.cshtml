<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var relatedItem in Model.RelatedItems)
            {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="@relatedItem.CommodityImages.FirstOrDefault().ImagePath">
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="~/shop/itemdetails?CommodityId=@relatedItem.CommodityId">@relatedItem.Title</a></h6>
                        <h5>@relatedItem.Price LE</h5>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>
<!-- Related Product Section End -->

