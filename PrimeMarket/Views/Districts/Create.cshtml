@model PrimeMarket.Models.District

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>أضافة </h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>مركز جديد</h4>
        <hr />
        <div class="form-group row">
            @Html.LabelFor(model => model.GovernorateId, "المحافظة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("GovernorateId", null, htmlAttributes: new { @class = "form-control", @style= "float:right !important;" })
                @Html.ValidationMessageFor(model => model.GovernorateId, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.DistrictId,"اسم المركز", htmlAttributes: new { @class = "control-label col-md-2", @style = "display: none" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DistrictId, new { htmlAttributes = new { @class = "form-control", @style = "display: none",@Value="5" } })
                @Html.ValidationMessageFor(model => model.DistrictId, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <div class="form-group row">
            @Html.LabelFor(model => model.District1,"اسم المركز", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.District1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.District1, "", new { @class = "text-danger" })
            </div>
        </div>

    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="site-btn-be btn-default" />|
                @Html.ActionLink("عودة للمراكز", "Index", new { GovernorateId = Request["GovernorateId"] }, new { @class = "site-btn-be" })
            </div>
        </div>
    </div>
}

