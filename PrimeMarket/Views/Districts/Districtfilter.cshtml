@using PagedList;
@using PagedList.Mvc;
@model IPagedList<PrimeMarket.Models.District>

@{
    ViewBag.Title = "Districtfilter";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>المراكز</h2>

<p>
    @Html.ActionLink("أضافة مركز جديد", "Create", new { GovernorateId = Request["GovernorateId"] })
</p>
<table class="table">
    <tr>
        <th>المركز
            @*@Html.DisplayNameFor(model => model.First().District1)*@
        </th>
        <th>المحافظة
            @*@Html.DisplayNameFor(model => model.First().Governorate.Governorate1)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.District1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Governorate.Governorate1)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.DistrictId }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.DistrictId }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.DistrictId })|
            @Html.ActionLink("القرى", "Villagesfilter", "Villages", new { DistrictId = item.DistrictId, GovernorateId = Request["GovernorateId"] }, htmlAttributes: null)
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Districtfilter", new { page, GovernorateId = Request["GovernorateId"] }))
<div>
    @Html.ActionLink("عودة للمحافظات", "Index", "Governorates" )
</div>