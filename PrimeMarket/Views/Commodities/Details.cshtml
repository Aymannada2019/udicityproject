@model PrimeMarket.Models.Commodity
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}



    <h4>تفاصيل السلعة</h4>
    <hr />
    <div class="row table">
        <div class="col-md-2">
            <b>
              اسم السلعة
            </b>
        </div><div class="col-md-10">
       
            @Html.DisplayFor(model => model.Title)
           
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <b>
                تفاصيل السلعة
             
            </b>
        </div><div class="col-md-10">


            @Html.DisplayFor(model => model.Details)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <b>
                المنتج الفرعى
              
            </b>
        </div><div class="col-md-10">


            @Html.DisplayFor(model => model.SubCategory.SubCategory1)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <b>
                السعر/جنيه
             
            </b>
        </div><div class="col-md-10">


            @Html.DisplayFor(model => model.Price)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <b>
                الكمية
            
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.Quantity)    @Html.DisplayFor(model => model.PriceUnit.PriceUnit1) 
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <b>
                وحدة السعر
                @*@Html.DisplayNameFor(model => model.PriceUnitId)*@
            </b>
        </div><div class="col-md-10">


            @Html.DisplayFor(model => model.PriceUnit.PriceUnit1)
        </div>
    </div>

   

    <div class="row">
        <div class="col-md-2">
            <b>
                الاتاحة
              
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.Available)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <b>
                النشر
                
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.Publish)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <b>
                تاريخ الإضافة
              
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.CreationDate)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <b>
                تاريخ الانتهاء
            
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.ExpireDate)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <b>
                توافر السلعة
           
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.IsFeatured)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <b>
                السعر الاصلى
              
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.OriginalPrice)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <b>
                البائع
             
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.AspNetUser.UserName)
        </div>
    </div>
   


    <div class="row">
        <div class="col-md-2">
            <b>
                @Html.LabelFor(model => model.CommodityImages, "صور السلعة", htmlAttributes: new { @class = "control-label col-md-2" })
            </b>
        </div>
        <div class="col-md-10">
            <div class="form-group">

                <div class="col-md-10">
                    @if (Model.CommodityImages.Select(x => x.CommodityId == Model.CommodityId) != null)
                    {
                    

                            <div class="row">

                                @foreach (var file in (from s in Model.CommodityImages where s.CommodityId == Model.CommodityId select new { s.CommodityId, s.ImagePath, s.CommodityImageId }).ToList())
                                {


                                <div class="col-md-4">
                                    <img src="~/img/commodities/@file.ImagePath" style="height:200px;width:200px;" />
                                    <p>
                                        @file.CommodityImageId
                                    </p>


                                </div>




                                }
                            </div>
                       
                   }



                  
            </div>
        </div>
    </div>
        </div>

        <p>
            @Html.ActionLink("تعديل", "Edit", new { id = Model.CommodityId },new { @class = "site-btn" } ) |
            @Html.ActionLink("عودة للسلع", "Index", null,new { @class = "site-btn" })
        </p>
