@using PagedList;
@using PagedList.Mvc;
@model IPagedList<PrimeMarket.Models.Governorate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div class="col-lg-4" >
    <h2>المحافظات</h2>
     <p >
        @Html.ActionLink("اضافة محافظة", "Create")
    </p>
    @using (Html.BeginForm("Index", "Governorates", FormMethod.Get))
    {
        <p><b>بحث ب:</b>@Html.TextBox("Search") <input type="submit" value="بحث" /></p>
    }
</div>
<div class="col-lg-8"></div>
<div class="col-lg-8">
    <table class="table">
        <tr>
            <th>المحافظة
                @*@Html.DisplayNameFor(model => model.First().Governorate1,,,"المحافظة")*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Governorate1)
                </td>
                <td>
                 
                    @Html.ActionLink("تعديل", "Edit", new { id = item.GovernorateId }) |
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.GovernorateId }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.GovernorateId })  |
                    @Html.ActionLink("المراكز", "Districtfilter", "Districts", new { GovernorateId = item.GovernorateId }, htmlAttributes: null)
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }))

</div>