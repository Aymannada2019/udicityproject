@model PrimeMarket.Models.CommodityImage

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@*<h2>تفاصيل</h2>*@

<div><center>
    <h4>  تفاصيل الصورة</h4>
</center>
    <hr />
    <div class="row">
        <div class="col-md-2">
            <b>
                السلعة
             
            </b>
        </div><div class="col-md-10">
            @Html.DisplayFor(model => model.Commodity.Title)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <b>
                الصورة
             
            </b>
        </div><div class="col-md-10">
            @if (Model.ImagePath != "" && Model.ImagePath != null)
            {
                <img src="@Html.DisplayFor(model => model.ImagePath)" id="commidityimage" style="height:200px;width:250px;" name="commidityimage" />
            }
            else
            {
                @Html.DisplayFor(model => model.ImagePath)
            }
        </div>
    </div>



   
</div>

        <p>
            @Html.ActionLink("تعديل", "Edit", new { id = Model.CommodityImageId },new { @class = "site-btn" }) |
            @Html.ActionLink("عودة لقائمة الصور", "Index", new { CommodityId = Model.CommodityId }, new { @class = "site-btn" })
        </p>
