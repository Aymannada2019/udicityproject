@model PrimeMarket.Models.CommodityImage

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CommodityImages</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>

        <dd>
            @if (Model.ImagePath != "" && Model.ImagePath != null)
            {
                <img src="~/img/commodities/@Html.DisplayFor(model => model.ImagePath)" id="commidityimage" style="height:200px;width:250px;" name="commidityimage" />
            }
            else
            {
                @Html.DisplayFor(model => model.ImagePath)
            }
          
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Commodity.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Commodity.Title)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index" ,new { CommodityId = Model.CommodityId }, htmlAttributes: null)
        </div>
    }
</div>
