@using PagedList;
@using PagedList.Mvc;
@model IPagedList<PrimeMarket.Models.CommodityImage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>الصور الخاصة بالسلعة</h2>

<p>
    @Html.ActionLink("اضافة صورة جديدة ", "Create", new { CommodityId = Request["CommodityId"] }, htmlAttributes: null)
</p>
<table class="table">
    <tr>
       
        <th>السلعة
            @*@Html.DisplayNameFor(model => model.First().Commodity.Title)*@
        </th>
        <th> الصورة
            @*@Html.DisplayNameFor(model => model.First().ImagePath)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Commodity.Title)
        </td>
        <td>
            @if (item.ImagePath != "" && item.ImagePath!=null)
            {
                <img src="~/img/commodities/@Html.DisplayFor(modelItem => item.ImagePath)" id="commidityimage" style="height:40px;width:40px;" name="commidityimage" />
            }
            else
            {
            @Html.DisplayFor(modelItem => item.ImagePath)}
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.CommodityImageId }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.CommodityImageId }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.CommodityImageId })
        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("عودة للسلع", "Index", "Commodities")</p>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))